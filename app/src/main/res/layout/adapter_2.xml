<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@mipmap/png_head"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_12"/>
    <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_12"
        android:textColor="@color/color_333333"
        app:layout_constraintTop_toTopOf="@+id/iv_1"
        app:layout_constraintBottom_toBottomOf="@+id/iv_1"
        app:layout_constraintLeft_toRightOf="@+id/iv_1"
        android:layout_marginLeft="@dimen/dp_16"
        android:text="By"/>
    <ImageView
        android:id="@+id/iv_2"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"
        app:layout_constraintLeft_toRightOf="@+id/nickname"
        android:layout_marginLeft="@dimen/dp_24"
        android:background="@mipmap/dw"
        app:layout_constraintBottom_toBottomOf="@+id/iv_1"/>
    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_12"
        android:textColor="@color/color_666666"
        app:layout_constraintTop_toTopOf="@+id/iv_1"
        app:layout_constraintBottom_toBottomOf="@+id/iv_1"
        app:layout_constraintLeft_toRightOf="@+id/iv_2"
        android:layout_marginLeft="@dimen/dp_4"
        android:text="By"/>
    <TextView
        android:id="@+id/tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_12"
        android:textColor="@color/color_666666"
        app:layout_constraintTop_toBottomOf="@+id/iv_1"
        app:layout_constraintLeft_toLeftOf="@id/iv_1"
        android:layout_marginTop="@dimen/dp_12"
        android:text="By"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/re_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_3"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintTop_toBottomOf="@+id/re_item">
        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="16dp"
                android:background="@mipmap/fx" />
            <TextView
                android:id="@+id/tv_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginLeft="@dimen/dp_4"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp_11"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="16dp"
                android:background="@mipmap/pl"/>
            <TextView
                android:id="@+id/tv_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginLeft="@dimen/dp_4"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp_11"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="16dp"
                android:background="@mipmap/dz"/>
            <TextView
                android:id="@+id/tv_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginLeft="@dimen/dp_4"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp_11"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>