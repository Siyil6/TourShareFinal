<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/common_mtoolbar"
        style="@style/toolbarStyle"/>
    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="@dimen/dp_36"
        android:text="MyTour"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/re_comon_bar"
        android:layout_marginTop="@dimen/dp_72"/>
    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="share your travel moments"
        android:textSize="13dp"
        android:textColor="#999999"
        app:layout_constraintTop_toBottomOf="@+id/tv_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_8"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintTop_toBottomOf="@+id/tv_2"
        android:layout_marginTop="@dimen/dp_36"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        android:background="@drawable/radius8_1"
        android:drawableLeft="@mipmap/yh"
        android:textColorHint="@color/color_999999"
        android:hint="Username"
        android:drawablePadding="@dimen/dp_12"
        android:paddingLeft="@dimen/dp_12"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintTop_toBottomOf="@+id/edt_1"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        android:drawableLeft="@mipmap/yx"
        android:textColorHint="@color/color_999999"
        android:hint="Email address"
        android:drawablePadding="@dimen/dp_12"
        android:background="@drawable/radius8_1"
        android:paddingLeft="@dimen/dp_12"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintTop_toBottomOf="@+id/edt_2"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        android:drawableLeft="@mipmap/mm"
        android:textColorHint="@color/color_999999"
        android:hint="Password"
        android:drawablePadding="@dimen/dp_12"
        android:background="@drawable/radius8_1"
        android:paddingLeft="@dimen/dp_12"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintTop_toBottomOf="@+id/edt_3"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        android:drawableLeft="@mipmap/mm"
        android:textColorHint="@color/color_999999"
        android:hint="Confirm Password"
        android:drawablePadding="@dimen/dp_12"
        android:background="@drawable/radius8_1"
        android:paddingLeft="@dimen/dp_12"/>
    <LinearLayout
        android:id="@+id/lin_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edt_4"
        app:layout_constraintLeft_toLeftOf="@+id/edt_4"
        android:layout_marginTop="@dimen/dp_36">
        <CheckBox
            android:id="@+id/ck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agree to policy"
            android:textSize="@dimen/dp_11"
            android:textColor="#3894FF"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintTop_toBottomOf="@+id/lin_1"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        android:background="@drawable/radius8_3"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_12"
        android:textAllCaps="false"
        android:text="Register"/>
</androidx.constraintlayout.widget.ConstraintLayout>