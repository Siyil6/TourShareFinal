<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/common_mtoolbar"
        style="@style/toolbarStyle"/>
    <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="@dimen/dp_36"
        android:text="MyTour"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/re_comon_bar"
        android:layout_marginTop="@dimen/dp_72"/>
    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="share your travel moments"
        android:textSize="13dp"
        android:textColor="#999999"
        app:layout_constraintTop_toBottomOf="@+id/nickname"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_8"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintTop_toBottomOf="@+id/tv_2"
        android:layout_marginTop="@dimen/dp_124"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        android:background="@drawable/radius8_2"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_12"
        android:textAllCaps="false"
        android:text="Already have an account"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintTop_toBottomOf="@+id/register"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        android:background="@drawable/radius8_3"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_12"
        android:textAllCaps="false"
        android:text="Register an account"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_36"
        android:gravity="center">
        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:background="@mipmap/ic_launcher"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to homepage"
            android:textSize="@dimen/dp_11"
            android:layout_marginLeft="@dimen/dp_8"
            android:textColor="@color/color_333333"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>